                        <Label Content="作者" Grid.Column="3" HorizontalContentAlignment="Center"/>
                        <Label Content="出版商" Grid.Column="4" HorizontalContentAlignment="Center"/>
                        <Label Content="本数" Grid.Column="5" HorizontalContentAlignment="Center"/>
