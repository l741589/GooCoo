                <MenuItem Header="登录" x:Name="mi_login"/>
                <MenuItem Header="登出" x:Name="mi_logout"/>
                <MenuItem Header="退出" x:Name="mi_exit"/>
            </MenuItem>
            <MenuItem Header="捐书(_D)" Click="MenuItem_Click">
                
            </MenuItem>
        </Menu>
        <Button x:Name="bn_login" Content="登录" DockPanel.Dock="Top" IsDefault="True"/>
        <TabControl Margin="8,8,8,8" x:Name="tc_main" IsEnabled="False" SelectionChanged="tc_main_SelectionChanged">
            <TabItem Header="书籍业务">
                <UniformGrid Columns="2" Rows="1" DockPanel.Dock="Bottom">
                    <DockPanel LastChildFill="True">
                        <TextBox x:Name="tb_book" Height="23" TextWrapping="NoWrap"  DockPanel.Dock="Top">
                            <TextBox.Resources>
                                <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock FontStyle="Italic" Text="搜索书籍"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </TextBox.Resources>
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="{x:Null}">
                                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <DockPanel DockPanel.Dock="Bottom" Margin="0,8,0,0" Visibility="Collapsed" x:Name="dp_rbook">
                            <Label Content="与该用户相关的书籍"  DockPanel.Dock="Top"/>
                            <ListBox DockPanel.Dock="Bottom" Height="128" x:Name="lb_rbook"/>
                        </DockPanel>
                        <ListBox x:Name="lb_book"/>
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBox x:Name="tb_user" Height="23" TextWrapping="NoWrap"  DockPanel.Dock="Top">
                            <TextBox.Resources>
                                <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Left">
                                    <VisualBrush.Visual>
                                        <TextBlock FontStyle="Italic" Text="搜索用户"/>
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </TextBox.Resources>
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="{x:Null}">
                                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <DockPanel DockPanel.Dock="Bottom" Margin="0,8,0,0" Visibility="Collapsed" x:Name="dp_ruser">
                            <Label Content="与该书相关的用户"  DockPanel.Dock="Top"/>
                            <ListBox DockPanel.Dock="Bottom" Height="128" x:Name="lb_ruser"/>
                        </DockPanel>
                        <ListBox x:Name="lb_user"/>
                    </DockPanel>                    
                </UniformGrid>
            </TabItem>
            <TabItem Header="管理用户">
                <DockPanel LastChildFill="True">
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBar ToolBarTray.IsLocked="False">
                            <Button x:Name="bn_addUser" Content="添加用户"/>
                            <Button x:Name="bn_commitUser" Content="提交更改" VerticalAlignment="Bottom" Click="bn_commitUser_Click"/>
                            <Button x:Name="bn_revertUser" Content="全部还原" Click="bn_revertUser_Click"/>
                        </ToolBar>
                        <ToolBar>
                            <TextBox MinWidth="108" x:Name="tb_syncUser">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Italic" Text="在此输入关键字"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="bn_syncUser" Content="获取数据"/>
                        </ToolBar>
                        <Widget:FilterToolBar Tag="user" x:Name="ftb_user"/>
                    </ToolBarTray>
                    <Grid DockPanel.Dock="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="108" />
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="2*"/>
