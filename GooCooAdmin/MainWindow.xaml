                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="72"/>
                            <ColumnDefinition Width="72"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="操作" Grid.Column="0" HorizontalContentAlignment="Center"/>
                        <Label Content="学号" Grid.Column="1" HorizontalContentAlignment="Center"/>
                        <Label Content="姓名" Grid.Column="2" HorizontalContentAlignment="Center"/>
                        <Label Content="邮箱" Grid.Column="3" HorizontalContentAlignment="Center"/>
                        <Label Content="邮箱" Grid.Column="4" HorizontalContentAlignment="Center"/>
                        <Label Content="信誉值" Grid.Column="5" HorizontalContentAlignment="Center"/>
                        <Label Content="权限" Grid.Column="6" HorizontalContentAlignment="Center"/>
                        <Label Content="状态" Grid.Column="7" HorizontalContentAlignment="Center"/>
                    </Grid>
                    <ScrollViewer x:Name="sv_user" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    </ScrollViewer>
                </DockPanel>
            </TabItem>

            <TabItem Header="管理书籍" IsEnabled="True">
                <DockPanel LastChildFill="True">
                    <ToolBarTray DockPanel.Dock="Top">
                        <ToolBar ToolBarTray.IsLocked="False">
                            <Button x:Name="bn_addBook" Content="添加书籍" Click="bn_addBook_Click"/>
                            <Button x:Name="bn_commitBook" Content="提交更改" VerticalAlignment="Bottom" Click="bn_commitBook_Click"/>
                            <Button x:Name="bn_revertBook" Content="全部还原" Click="bn_revertBook_Click"/>
                        </ToolBar>
                        <ToolBar>
                            <TextBox MinWidth="108" x:Name="tb_syncBook">
                                <TextBox.Resources>
                                    <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Left">
                                        <VisualBrush.Visual>
                                            <TextBlock FontStyle="Italic" Text="在此输入关键字"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="{x:Null}">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="bn_syncBook" Content="获取数据" Click="bn_syncBook_Click"/>
                        </ToolBar>
                        <Widget:FilterToolBar Tag="book" x:Name="ftb_book"/>
                    </ToolBarTray>
                    <Grid DockPanel.Dock="Top" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="108" />
                            <ColumnDefinition Width="96"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="96"/>
                            <ColumnDefinition Width="72"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="操作" Grid.Column="0" HorizontalContentAlignment="Center"/>
                        <Label Content="ISBN" Grid.Column="1" HorizontalContentAlignment="Center"/>
